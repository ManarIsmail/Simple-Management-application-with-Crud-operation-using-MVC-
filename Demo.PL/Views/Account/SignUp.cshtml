@model RegisterViewModel
@{
    ViewData["Title"] = "Sign Up Page";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <form asp-action="SignUp">
            <input class="text email" type="email" asp-for="@Model.Email" placeholder="Email" required="">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <input class="text" type="password" asp-for="@Model.Password" placeholder="Password" required="">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <input class="text w3lpass" type="password" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="">
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
        <p>Have an Account? <a asp-action="SignIn"> Login Now!</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
